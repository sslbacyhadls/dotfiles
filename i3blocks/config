[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=60
color=#A4C2F4

[battery]
command=echo $(acpi -b | grep -E -o '[0-9][0-9]%')
interval=5

[layout]
command=swaymsg -t get_inputs | jq -r '.[] | select(.identifier == "1:1:AT_Translated_Set_2_keyboard") | .xkb_active_layout_name' 
interval=1

[date]
command=date +%D
interval=1
aligin=center

[time]
command=date +%T
interval=1
aligin=center

